<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
        <ImageView
            android:id="@+id/imgAnhTruyen"
            android:src="#A8000000"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/txvTenChap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#A8000000"
            android:contentDescription=""
            android:gravity="center"
            android:text="Truyện Tranh"
            android:textColor="#fff"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txvTenTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Tên của bộ truyện tranh"
        android:gravity="center"
        android:padding="5dp"
        android:text="Tên Truyện Tranh"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />
</LinearLayout>